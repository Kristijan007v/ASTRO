---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import Avatar from './Avatar/Avatar.astro';
import Card from './Card/Card.astro';
import Navigation from './Navigation/Navigation.astro';
---

<header>
	<Navigation />
	<div class="container grid">
		<div class="items">
			<Avatar imageURL="https://www.kristijan.me/_next/image?url=%2Fimages%2Fmy_picture.jpg&w=1080&q=75" />
		</div>
		<div class="items special__block">
			<h1 class="heading__h1">Kristijan VidoviÄ‡</h1>
			<h6 class="mt-2">Frontend Developer</h6>
			<Card>
				<p class="card__text">
					Helping developers build a faster web. Teaching about web development, serverless, and React / Next.js.
				</p>
			</Card>
		</div>
	</div>
</header>
<style>
	
	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		grid-gap: 1.5rem;
	}


	.items:nth-child(1) {
  	justify-self: end;
}

	.items > * {
		margin-top: 10px;
	}

	h6{
	font-family: 'Inter';
	font-style: normal;
	font-weight: 400;
	font-size: 17px;
	}







</style>
