---
import { getRandomColor } from '../../lib/get-random-color';
import ArrowLeft from '../icons/arrow-left.astro';

interface Props{
    title: string;
    shortDescription: string;
    imageURL?: string;
    tags: string[];
    link: string;
}


const { title, shortDescription,imageURL, tags, link, ...props } = Astro.props;


const newTags = tags.map((tag) => {
    return {
        name: tag,
        color: getRandomColor(),
    };
});


---

<div class="card" {...props}>
    <div class="image__container">
        <img src={imageURL} alt={title} />
    </div>
    <h4>{title}</h4>
    <p>{shortDescription}</p>
    <div class="card__footer">
        <div class="tag__items">
            {newTags.map((tag) => (
                <div class="tag__item" style={"background:" + tag.color}>
                    <span># {tag.name}</span>
                </div>
            ))}
        </div>
        <a href={link}>
            <div class="post__link">
                <ArrowLeft />
            </div>
        </a>
    </div>
</div>
<style>
	.card{
    padding: 1.4rem 1rem 1.4rem 1rem;
    background: #171717;
    border-radius: 12px;
    }

    .image__container{
        position: relative;
        width: 100%;
        height: 240px;
        /* border: 1px solid rgb(15, 15, 15);
        border-radius: 12px; */
    }

    .post__link{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: #4F4F4F;
    border-radius: 50%;
    }

    .card__footer{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
    }

    .tag__items{
        display: flex;
        flex-wrap: wrap;
    }

    .tag__item{
        margin-right: 8px;
        padding: 0.4rem 0.7rem;
        border-radius: 8px;
    }

    img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 12px;
    }

    p{
    color: #4F4F4F;
    }

    span{
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    }



</style>
